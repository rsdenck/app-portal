<?xml version="1.0"?>
<ruleset name="Portal">
    <description>Portal Coding Standard</description>
    <arg name="colors"/>
    <arg value="p"/>
    
    <rule ref="PSR12">
        <exclude name="PSR1.Files.SideEffects.FoundWithSymbols"/>
        <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"/>
    </rule>

    <file>app</file>
    <file>includes</file>
    <file>client</file>

    <exclude-pattern>vendor/*</exclude-pattern>
</ruleset>
